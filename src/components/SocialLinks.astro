  {
    link: "mailto: anasahmad0239@gmail.com",
    svg: "/mail.svg",
    label: "Email to me",
  },
  {
    link: "https://github.com/anasahmd",
    svg: "/github.svg",
    label: "Github Account",
  },
  {
    link: "https://twitter.com/anas_ahmad35",
    svg: "/twitter.svg",
    label: "Twitter Account",
  },
  {
    link: "https://www.linkedin.com/in/anasahmd/",
