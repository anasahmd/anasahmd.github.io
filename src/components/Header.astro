---
const { location } = Astro.props;
---

<header>
  <nav
    class="max-w-2xl m-auto flex mt-5 text-center px-5 py-3 text-xl justify-between items-center"
  >
    <div class="font-semibold text-lg">
      <a class="" href="/">anasahmad.dev</a>
    </div>
    <ul class="">
      <li class="flex gap-2 justify-center text-lg">
        <div
          class={`w-20 py-1 hover:font-semibold ${
            location === 'work' &&
            'bg-white px-3 font-semibold rounded-xl drop-shadow-sm'
          }`}
        >
          <a href="/" class="">Work</a>
        </div>
        <div
          class={`w-20 py-1 hover:font-semibold ${
            location === 'about' &&
            'bg-white px-3 font-semibold rounded-xl drop-shadow-sm'
          }`}
        >
          <a href="/about">About</a>
        </div>
      </li>
    </ul>
  </nav>
</header>
